<div class="page page-selfSystem clearfix">
	<div class="row title">
		<div class="col-lg-6 col-xs-12">
			单设备后台/设备管理 /本机系统设置
		</div>

		<div class="col-lg-6 col-xs-12 text-right">
			<span>当前时间：</span>
            <span id="now-time"></span>
		</div>
	</div>
	<div class="self_tit">
		<div class="table-tit">
			<div class="row">
				<div class="col-lg-6 col-xs-12">
					<p class="tit-name">本机系统设置</p>
				</div>
				
				<div class="col-lg-6 col-xs-12">
					<div class="report-btn">
						<button type="button" class="btn btn-info" onclick="systemEdit()">编辑</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="self_con">
		<table class="table">

            <tr>
                <td class="text-right">局端IP：</td>
                <td colspan="3">
                    <input class="weizhi" type="text" id="mainControlIp" readonly>
                </td>
            </tr>

			<tr>
				<td class="text-right">设备编号：</td>
				<td colspan="3">
                    <input class="weizhi" type="text" id="deviceAddress" readonly>
				</td>
			</tr>
			<tr>
				<td class="text-right">本机IP地址：</td>
				<td colspan="3"><input type="" name="" id="deviceIp" value="192.168.0.1" readonly/></td>
			</tr>
			<tr>
				<td class="text-right">机器码：</td>
				<td colspan="3"><input type="text" name="" id="machinecode" value="" readonly/></td>
			</tr>
		</table>
		<div class="system_btn" style="display: none;">
			<button type="button" class="btn btn-info" onclick="systemSave()">保存</button>
		</div>
	</div>
<div>
	<script src="/monitor/source/js/my.js"></script>
<script src="/monitor/source/js/selfSystem.js"></script>

	<script>
        $(function () {
            systemInit();
        })
	</script>