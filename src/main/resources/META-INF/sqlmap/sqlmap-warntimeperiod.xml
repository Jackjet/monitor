	<select id="page" resultMap="RM_Warntimeperiod" parameterType="java.util.HashMap">
		select 
		    id, 
		    timeperiodname, 
		    Sunday, 
		    Monday, 
		    Tuesday, 
		    Wednesday, 
		    Thursday, 
		    Friday, 
		    Saturday
		from warntimeperiod
	</select>
	<select id="list" resultMap="RM_Warntimeperiod" >
